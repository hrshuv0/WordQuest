@model Word

@{
    Layout = "_AdminLayout";
    var title = Model.Id == 0 ? "Create" : "Edit";
    var subtitle = title + " Vocabulary";
}

<div class="pagetitle">
  <h1>@subtitle</h1>
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="">Home</a></li>
      <li class="breadcrumb-item">Vocabs</li>
      <li class="breadcrumb-item active">@title</li>
    </ol>
  </nav>
</div>

<section class="section">
  <div class="row">
    <div class="col-lg-12">

      <div class="card">
        <div class="card-body">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5>Vocabs</h5>
            <a asp-area="Admin" asp-controller="Vocabulary" asp-action="Index" type="button" class="btn btn-sm btn-outline-secondary">
              <i class="bi bi-journal-richtext"></i> Manage
            </a>
          </div>
          

          <p>...</p>
          
          <form asp-area="Admin" asp-controller="Vocabulary" asp-action="CreateEdit" method="post">
            
            <input asp-for="Id" type="hidden" />
            
            <div class="w-50 justify-content-center mx-auto">
              <div class="row mb-3">
                <label class="col-sm-3 col-form-label text-end">Name</label>
                <div class="col-sm-9">
                  <input asp-for="Name" type="text" class="form-control">
                </div>
              </div>
              
              <div class="row mb-3">
                <label class="col-sm-3 col-form-label text-end">Definition</label>
                <div class="col-sm-9">
                  <input asp-for="Definition" type="text" class="form-control">
                </div>
              </div>
              
              <div class="row mb-3">
                <label class="col-sm-3 col-form-label text-end">Part Of Speech</label>
                <div class="col-sm-9">
                  <input asp-for="PartOfSpeech" type="text" class="form-control">
                </div>
              </div>
              
              <div class="row mb-3">
                <label class="col-sm-3 col-form-label text-end">Pronunciation</label>
                <div class="col-sm-9">
                  <input asp-for="Pronunciation" type="text" class="form-control">
                </div>
              </div>
              
              <div class="row mb-3">
                <label class="col-sm-3 col-form-label text-end">Example</label>
                <div class="col-sm-9">
                  <input asp-for="Example" type="text" class="form-control">
                </div>
              </div>
              
              <div class="row mb-3">
                <label class="col-sm-3 col-form-label text-end">Translation</label>
                <div class="col-sm-9">
                  <input asp-for="Translation" type="text" class="form-control">
                </div>
              </div>
              
              
              <div class="row mb-3">
                <a asp-controller="Vocabulary" asp-action="Index" class="offset-sm-3 btn btn-sm btn-outline-secondary col-sm-4 col-md-2 col-2 me-2 mt-2">Cancel</a>
                <button type="submit" class="btn btn-sm btn-outline-success col-sm-4 col-md-2 col-2 mt-2">@title</button>

              </div>

            </div>
            


          </form>

          


        </div>
      </div>

    </div>
  </div>
</section>
