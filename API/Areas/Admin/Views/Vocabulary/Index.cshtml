
@{
    Layout = "_AdminLayout";
}

<div class="pagetitle">
  <h1>Manage Vocabulary</h1>
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="">Home</a></li>
      <li class="breadcrumb-item">Vocabs</li>
      <li class="breadcrumb-item active">Manage</li>
    </ol>
  </nav>
</div>

<section class="section">
  <div class="row">
    <div class="col-lg-12">

      <div class="card">
        <div class="card-body">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5>Vocabs</h5>
            <a asp-area="Admin" asp-controller="Vocabulary" asp-action="CreateEdit" type="button" class="btn btn-sm btn-outline-success">
              <i class="bi bi-plus-lg"></i> Add New
            </a>
          </div>
          

          <p>...</p>

          <table class="table table-striped table-hover" id="tblData">
            <thead>
            <tr>
              <th>Name</th>
              <th>Definition</th>
              <th>POP</th>
              <th>Pronunciation</th>
              <th>Example</th>
              <th>Translation</th>
              <th>Difficulty</th>
              <th>Time</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
            </thead>
            <tbody>

            </tbody>


          </table>


        </div>
      </div>

    </div>
  </div>
</section>

<partial name="_ModalPartial"/>

@section Scripts
{
  <script src="~/js/vocabulary.js"></script>
  
}
