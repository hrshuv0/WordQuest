@model Word

@{
    Layout = "_AdminLayout";
    const string title = "Details";
}

<div class="pagetitle">
  <h1>@title</h1>
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="">Home</a></li>
      <li class="breadcrumb-item">Vocabs</li>
      <li class="breadcrumb-item active">@title</li>
    </ol>
  </nav>
</div>

<section class="section">
  <div class="row">
    <div class="col-lg-12">

      <div class="card">
        <div class="card-body">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5>Vocabs</h5>
            <a asp-area="Admin" asp-controller="Vocabulary" asp-action="Index" type="button" class="btn btn-sm btn-outline-secondary">
              <i class="bi bi-journal-richtext"></i> Manage
            </a>
          </div>
          

          <p>...</p>
          
          <div>
            
            <div class="w-50 justify-content-center mx-auto">
              <div class="row mb-3">
                <div class="col-lg-3 col-md-4 label">Name</div>
                <div class="col-lg-9 col-md-8">@Model.Name</div>
              </div>

              <div class="row mb-3">
                <div class="row mb-3">
                  <div class="col-lg-3 col-md-4 label">Definition</div>
                  <div class="col-lg-9 col-md-8">@Model.Definition</div>
                </div>
              </div>

              <div class="row mb-3">
                <div class="row mb-3">
                  <div class="col-lg-3 col-md-4 label">Part Of Speech</div>
                  <div class="col-lg-9 col-md-8">@Model.PartOfSpeech</div>
                </div>
              </div>

              <div class="row mb-3">
                <div class="row mb-3">
                  <div class="col-lg-3 col-md-4 label">Pronunciation</div>
                  <div class="col-lg-9 col-md-8">@Model.Pronunciation</div>
                </div>
              </div>

              <div class="row mb-3">
                <div class="row mb-3">
                  <div class="col-lg-3 col-md-4 label">Example</div>
                  <div class="col-lg-9 col-md-8">@Model.Example</div>
                </div>
              </div>

              <div class="row mb-3">
                <div class="row mb-3">
                  <div class="col-lg-3 col-md-4 label">Translation</div>
                  <div class="col-lg-9 col-md-8">@Model.Translation</div>
                </div>
              </div>


              <div class="row mb-3">
                <a asp-controller="Vocabulary" asp-action="Index" class="offset-sm-3 btn btn-sm btn-outline-secondary col-sm-4 col-md-2 col-2 me-2 mt-2">Back</a>
                <a asp-area="Admin" asp-controller="Vocabulary" asp-action="CreateEdit" class="btn btn-sm btn-outline-success col-sm-4 col-md-2 col-2 mt-2">Create New</a>

              </div>

            </div>



          </div>

          


        </div>
      </div>

    </div>
  </div>
</section>
